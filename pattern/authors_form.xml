<?xml version="1.0"?>
<script>
    <masterfield>aid</masterfield>
    <part>
      <name>main</name>
      <section>
        <parentselector>.//*[@id="main"]</parentselector>
        <selector>.//*[@id="form"]</selector>
        <repeat>0</repeat>
      </section>
      <sql>
        <readquery>SELECT * FROM authors WHERE aid = {aid}</readquery>
        <writequery>
        </writequery>
        <writegenerator>
          <scriptname>write</scriptname>
          <param>
            <table>authors</table>
            <id_name>aid</id_name>
          </param>
        </writegenerator>
        <argument>
          <aid><type>int</type><long></long><default></default></aid>
          <aname><type>str</type><long></long><default></default></aname>
          <fullname><type>str</type><long></long><default></default></fullname>
          <about><type>str</type><long></long><default></default></about>
          <descr><type>str</type><long></long><default></default></descr>
        </argument>
      </sql>
      <layout>
        <element><selector>.//*[@name="aid"]</selector><attribute></attribute><fild>aid</fild></element>
        <element><selector>.//*[@name="aname"]</selector><attribute>value</attribute><fild>aname</fild></element>
        <element><selector>.//*[@name="fullname"]</selector><attribute>value</attribute><fild>fullname</fild></element>
        <element><selector>.//*[@name="about"]</selector><attribute></attribute><fild>about</fild></element>
        <element><selector>.//*[@name="descr"]</selector><attribute>value</attribute><fild>descr</fild></element>
      </layout>
    </part>
    <part></part>
  </script>
